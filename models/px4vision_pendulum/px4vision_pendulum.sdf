  <link name='pendulum'>
    <pose>-0.425 0 0 0 1.57 0</pose>
    <inertial>
      <mass>0.01</mass>
      <inertia>
        <ixx>0.00060208</ixx>
        <ixy>0</ixy>
        <ixz>0</ixz>
        <iyy>0.00060208</iyy>
        <iyz>0</iyz>
        <izz>0.000000005</izz>
      </inertia>
    </inertial>
    <collision name='pendulun_collision'>
      <geometry>
        <cylinder>
          <radius>0.01</radius>
          <length>0.85</length>
        </cylinder>
      </geometry>
      <surface>
        <contact>
          <ode/>
        </contact>
        <friction>
          <ode/>
        </friction>
      </surface>
    </collision>
    <visual name='pendulum_visual'>
      <geometry>
        <cylinder>
          <radius>0.001</radius>
          <length>0.85</length>
        </cylinder>
      </geometry>
      <material>
        <script>
          <name>Gazebo/White</name>
          <uri>file://media/materials/scripts/gazebo.material</uri>
        </script>
      </material>
    </visual>
    <gravity>1</gravity>

  </link>

  <link name='load'>
    <pose>-0.85 0 0 0 1.57 0</pose>
    <inertial>
      <mass>0.25</mass>
      <inertia>
        <ixx>0.00025</ixx>
        <ixy>0</ixy>
        <ixz>0</ixz>
        <iyy>0.00025</iyy>
        <iyz>0</iyz>
        <izz>0.00025</izz>
      </inertia>
    </inertial>
    <collision name='load_collision'>
      <geometry>
        <sphere>
          <radius>0.05 0.05 0.05</radius>
        </sphere>
      </geometry>
      <surface>
        <contact>
          <ode/>
        </contact>
        <friction>
          <ode/>
        </friction>
      </surface>
    </collision>
    <visual name='load_visual'>
      <geometry>
        <sphere>
          <radius>0.05 0.05 0.05</radius>
        </sphere>
      </geometry>
      <material>
        <script>
          <name>Gazebo/Red</name>
          <uri>file://media/materials/scripts/gazebo.material</uri>
        </script>
      </material>
    </visual>
    <gravity>1</gravity>
  </link>

  <joint name='load_joint' type='universal'>
    <pose>0 0 0.0 0 0 0</pose>
    <child>load</child>
    <parent>pendulum</parent>
    <axis>
      <xyz>0 0 1</xyz>
      <dynamics>
        <friction>10</friction>
      </dynamics>
    </axis>

    <axis2>
      <xyz>1 1 0</xyz>
      <dynamics>
        <friction>100</friction>
      </dynamics>
    </axis2>
  </joint>

  <joint name='pendulum_joint' type='universal'>
